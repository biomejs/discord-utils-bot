{
  "compilerOptions": {
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",

    "target": "esnext",

    "types": ["@cloudflare/workers-types"],
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,

    "noEmit": true,
    "erasableSyntaxOnly": true,
    "verbatimModuleSyntax": true
  }
}
